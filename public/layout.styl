@import "mixins"

*
  margin 0
  padding 0
  box-sizing border-box

html
  height 100%
  background #e2e2e2

body
  font(14px, black)
  height 100%
  color black
  background #e2e2e2

.content
  width content
  height 100%
  background white
  padding line gap 0 gap

  margin-right auto
  margin-left auto

.menu
  margin-bottom line*2

h1
  font(36px, black)
  padding 1px 0 6px 0

.largeLink
  margin-bottom line*2
  a
    font(26px, linkColor)
    &:hover
      color hoverLinkColor

.footer
  font(13px, #949494)
  border-top 1px solid #ccc
  margin line*2 auto 0
  padding-top line*3
  padding-bottom line*3
  dd
    margin-bottom line/2;
  a
    font(11px, #6da3bd)

.navigation
  .crump
    display inline-block
    padding (line/2) (gap/2) (line/2) (gap/2)
    margin-right (gap/5)
    background #eaecea
    a
      font(16px, linkColor)
      &:hover
        color hoverLinkColor
      &::after
        content " â†’"

.actionBlock
  padding-top line*2
  padding-bottom line

.action
  font(12px, #282828)
  user-select-none()

  border-radius(6px)
  box-shadow-inset(0, 1px, 1px, #fff)
  border 1px solid #d9d8d8;

  cursor pointer
  display inline-block
  line-height 26px
  vertical-align middle

  padding 0 (gap/2)
  background-color #eee;

  &:hover
    background-color #fcfcfc;
  &:active
    background-color #e1e1e1;
    box-shadow-inset(0, 1px, 1px, #d9d8d8)