@import "mixins"

*
  margin 0
  padding 0
  box-sizing border-box

html
  height 100%
  font-size 62.5%
  background desktopColor

body
  body-font()
  height 100%
  background desktopColor

.decorator
  decorator(10px, gap / 2)
  background paperColor
  height 100%

.container
  container()
  height 100%

ul
  list-style-type none
  border none
li
  vertical-align middle
  height 48px
  line-height 48px
  margin-left gap

.footer
  border-top 1px solid desktopColor
  margin-top 2rem
  padding-top 2rem

.crump
  caption-font()
  display inline-block
  margin-left 5px
  margin-right 5px
