@import "colors"

font(sp, lh, weight, color, inlineBlock = true)
  font-family Verdana, Geneva, sans-serif
  font-size (sp) px
  font-size (sp / 10) rem
  line-height (lh) px
  line-height (lh / 10) rem
  color color
  font-weight weight
  text-decoration none
  margin-bottom (lh / 2) px
  margin-bottom (lh / 20) rem
  display inline-block if inlineBlock

display-font()
  font(34, 40, 300, displayColor)

.display-font
  display-font()

headline-font()
  font(24, 32, 300, bodyColor)

.headline-font
  headline-font()

subhead-font()
  font(16, 24, 300, bodyColor)

.subhead-font
  subhead-font()

title-font()
  font(20, 28, 400, bodyColor)

.title-font
  title-font()

caption-font()
  font(12, 20, 300, displayColor)

.caption-font
  caption-font()

body-font()
  font(14, 20, 300, bodyColor, false)

.body-font
  body-font()

button-font(fontColor)
  font(14, 20, 400, fontColor, false)
  text-transform uppercase

.button-font
  button-font(bodyColor)



