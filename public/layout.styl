@import "mixins"

*
  margin 0
  padding 0
  box-sizing border-box

html
  height 100%
  background #e2e2e2

body
  defaultFont()
  height 100%
  color black
  background #e2e2e2

.decorator
  decorator(line, gap / 2)
  background white
  height 100%

.container
  container()
  height 100%

.menu
  margin-bottom line*2

h1
  font(36px, black)
  padding 1px 0 6px 0

.link
  margin-bottom line
  a
    font(14px, linkColor)
    cursor pointer
    &:hover
      color hoverLinkColor

.largeLink
  margin-bottom line*2
  a
    font(26px, linkColor)
    cursor pointer
    &:hover
      color hoverLinkColor

.footer
  font(13px, #949494)
  border-top 1px solid #ccc
  margin-top line*2
  padding-top line*3
  padding-bottom line*3
  dd
    margin-bottom line/2;
  a
    font(11px, #6da3bd)

.navigation
  .crump
    display inline-block
    padding (line/2) (gap/2) (line/2) (gap/2)
    background #eaecea
    a
      font(14px, linkColor)
      &:hover
        color hoverLinkColor
      &::after
        content " â†’"

.actionBlock
  padding-bottom line

action(baseColor)
  darkColor = lightness(baseColor, lightness(baseColor) - 5)
  darkestColor = lightness(baseColor, lightness(baseColor) - 10)
  lightColor = lightness(baseColor, lightness(baseColor) + 5)
  +cache()
    defaultFont()
    user-select-none()
    border-radius(6px)
    cursor pointer
    display inline-block
    line-height 26px
    vertical-align middle
    padding 0 (gap/2)

  background-color baseColor
  border 1px solid darkestColor
  box-shadow-inset(0, 1px, 1px, lightColor)

  &:hover
    background-color lightColor
  &:active
    background-color darkColor
    box-shadow-inset(0, 1px, 1px, darkestColor)

.action
  action(actionColor)

.global-action
  action(globalActionColor)
