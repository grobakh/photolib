@import "colors"
@import "font"

button-core()
  user-select-none()
  border none
  border-radius(3px)
  cursor pointer
  display inline-block
  text-align center
  vertical-align middle
  height 36px
  line-height 36px
  min-width unit
  padding-left 8px
  padding-right 8px


button-outer(fontColor, backColor)
  button-font(fontColor)
  button-core()
  margin-left 5px
  margin-right 5px
  background backColor
  &:hover
    background lightness(backColor, lightness(backColor) - 10%)
  &:active
    background lightness(backColor, lightness(backColor) - 20%)

.flat-button
  button-outer(bodyColor, paperColor)

.primary-button
  button-outer(paperColor, primaryColor)
