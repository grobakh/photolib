gap = 20px
unit = 3 * gap
content = 12 * unit + 12 * gap

container()
  width content
  margin-left auto
  margin-right auto

decorator(y, x)
  width content + 2 * x
  margin-left auto
  margin-right auto
  padding y x

grid12(n)
  width (n * unit + (n - 1) * gap)
  +cache()
    display inline-block
    float left
    position relative
    margin-left (gap / 2)
    margin-right (gap / 2)

shift12(n)
  padding-left (n * unit + n * gap)

for c in 1..12
  .grid12_{c}
    grid12(c)

for c in 1..11
  .shift12_{c}
    shift12(c)

